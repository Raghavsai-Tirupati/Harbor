{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@subsystemA/*": ["./src/subsystemA/*"],
      "@subsystemB/*": ["./src/subsystemB/*"],
      "@subsystemC/*": ["./src/subsystemC/*"]
    }
  },
  "include": ["src/**/*.ts", "shared/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", "infra"]
}
