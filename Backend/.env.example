# ─── Harbor Backend Environment Configuration ───────────────────────────────
# Copy this file to .env and fill in your values.
# Required keys are marked [REQUIRED]; others have sensible defaults.

# ─── General ─────────────────────────────────────────────────────────────────
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ─── AWS ─────────────────────────────────────────────────────────────────────
AWS_REGION=us-east-1
DDB_TABLE_HAZARDS=harbor-hazards
DDB_TABLE_CACHE=harbor-cache
S3_BUCKET_SNAPSHOTS=harbor-snapshots

# ─── AI: Gemini  [REQUIRED for chat] ────────────────────────────────────────
# Get a free key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# ─── AI: Featherless  [REQUIRED for preprocessing/summarization/fallback] ───
# Get a key: https://featherless.ai
FEATHERLESS_API_KEY=
FEATHERLESS_BASE_URL=https://api.featherless.ai/v1

# ─── Data: NASA FIRMS  [REQUIRED for live wildfire data] ────────────────────
# Get a free key: https://firms.modaps.eosdis.nasa.gov/api/area/
FIRMS_API_KEY=

# ─── Data: Google Places  [OPTIONAL – mock fallback if missing] ─────────────
# Get from Google Cloud Console → Places API
GOOGLE_PLACES_API_KEY=

# ─── Feature Modes ──────────────────────────────────────────────────────────
NEWS_MODE=gdelt          # gdelt | mock
AID_MODE=mock            # places | mock  (set to "places" if you have GOOGLE_PLACES_API_KEY)

# ─── CORS & Security ────────────────────────────────────────────────────────
ALLOWED_ORIGINS=*        # Comma-separated origins, or * for all
ENABLE_API_KEY=false     # Set true to require x-api-key header
API_KEY_VALUE=           # The key clients must send if ENABLE_API_KEY=true

# ─── Runtime Toggles ────────────────────────────────────────────────────────
USE_DIRECT_FETCH=true    # true = fetch APIs directly (local dev); false = use DynamoDB
